
doctype
html(itemscope,itemtype="http://schema.org/Article",ng-app="markup" debug="false")
    //page default Information
    //html body
    body
        div#getCSV
            style.
                #getCSV {
                    padding:30px;
                    width:500px;
                    margin:20px auto;
                }

                .csvViewer {
                    margin: 0 20px;
                    position: relative;
                }
                textarea {
                    display:block;
                    height:200px;
                    overflow:auto;
                    padding:20px;
                    margin:20px 0;
                    width:100%;
                    background:#ededed;
                    border:#777 solid 1px;
                }
                .ctrlBtn {
                    display: none;
                    position: absolute;
                    top:10px;
                    right:0px;
                }
            div.csvViewer
                h1 投票結果統計
                textarea#csv
                p
                    //- button#getResult.ctrlBtn 取得統票結果
                    a#download.ctrlBtn 下載投票結果統計
            div.csvViewer
                h1 投票參與名單取得
                textarea#csv2
                p
                    //- button#getResult.ctrlBtn 取得會員名單
                    a#download2.ctrlBtn 下載會員名單
            
            

        script(src="js/all.js")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
        script(src="/datas/papaparse.min.js")
        script(src="js/getCSV.js")
        